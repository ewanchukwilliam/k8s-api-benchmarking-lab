{
  "annotations": { "list": [] },
  "title": "Health Service Overview",
  "uid": "health-service-overview",
  "version": 1,
  "timezone": "browser",
  "schemaVersion": 39,
  "refresh": "5s",
  "time": { "from": "now-15m", "to": "now" },
  "panels": [
    {
      "id": 1,
      "title": "Running Pods",
      "type": "stat",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "targets": [{
        "expr": "count(kube_pod_status_phase{namespace=\"default\", pod=~\"health-service.*\", phase=\"Running\"})",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 2 },
              { "color": "green", "value": 5 }
            ]
          }
        }
      },
      "options": { "colorMode": "value", "graphMode": "area" }
    },
    {
      "id": 2,
      "title": "Nginx Ingress Pods",
      "type": "stat",
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
      "targets": [{
        "expr": "count(kube_pod_status_phase{namespace=\"ingress-nginx\", pod=~\"ingress-nginx-controller.*\", phase=\"Running\"})",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        }
      },
      "options": { "colorMode": "value", "graphMode": "area" }
    },
    {
      "id": 3,
      "title": "Total CPU Usage (health-service)",
      "type": "stat",
      "gridPos": { "x": 12, "y": 0, "w": 6, "h": 4 },
      "targets": [{
        "expr": "sum(rate(container_cpu_usage_seconds_total{namespace=\"default\", pod=~\"health-service.*\", container=\"health-service\"}[2m])) * 1000",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "millicpu",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 5000 },
              { "color": "red", "value": 8000 }
            ]
          }
        }
      },
      "options": { "colorMode": "value", "graphMode": "area" }
    },
    {
      "id": 4,
      "title": "Total Memory (health-service)",
      "type": "stat",
      "gridPos": { "x": 18, "y": 0, "w": 6, "h": 4 },
      "targets": [{
        "expr": "sum(container_memory_working_set_bytes{namespace=\"default\", pod=~\"health-service.*\", container=\"health-service\"})",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 2147483648 },
              { "color": "red", "value": 4294967296 }
            ]
          }
        }
      },
      "options": { "colorMode": "value", "graphMode": "area" }
    },
    {
      "id": 5,
      "title": "CPU Usage Per Pod",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
      "targets": [{
        "expr": "rate(container_cpu_usage_seconds_total{namespace=\"default\", pod=~\"health-service.*\", container=\"health-service\"}[2m]) * 1000",
        "legendFormat": "{{ pod }}",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "millicpu",
          "custom": {
            "lineWidth": 1,
            "fillOpacity": 20,
            "showPoints": "never"
          }
        }
      },
      "options": { "legend": { "displayMode": "table", "placement": "right" } }
    },
    {
      "id": 6,
      "title": "Memory Per Pod",
      "type": "timeseries",
      "gridPos": { "x": 12, "y": 4, "w": 12, "h": 8 },
      "targets": [{
        "expr": "container_memory_working_set_bytes{namespace=\"default\", pod=~\"health-service.*\", container=\"health-service\"}",
        "legendFormat": "{{ pod }}",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "custom": {
            "lineWidth": 1,
            "fillOpacity": 20,
            "showPoints": "never"
          }
        }
      },
      "options": { "legend": { "displayMode": "table", "placement": "right" } }
    },
    {
      "id": 7,
      "title": "Pod Count Over Time",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 12, "w": 12, "h": 6 },
      "targets": [{
        "expr": "count(kube_pod_status_phase{namespace=\"default\", pod=~\"health-service.*\", phase=\"Running\"})",
        "legendFormat": "health-service pods",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "min": 0,
          "max": 15,
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 30,
            "showPoints": "never",
            "staircase": true
          }
        }
      }
    },
    {
      "id": 8,
      "title": "CPU Throttling",
      "type": "timeseries",
      "gridPos": { "x": 12, "y": 12, "w": 12, "h": 6 },
      "targets": [{
        "expr": "sum(rate(container_cpu_cfs_throttled_periods_total{namespace=\"default\", pod=~\"health-service.*\", container=\"health-service\"}[2m])) / sum(rate(container_cpu_cfs_periods_total{namespace=\"default\", pod=~\"health-service.*\", container=\"health-service\"}[2m])) * 100",
        "legendFormat": "% time throttled",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 25 },
              { "color": "red", "value": 50 }
            ]
          },
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 30
          }
        }
      }
    }
  ]
}

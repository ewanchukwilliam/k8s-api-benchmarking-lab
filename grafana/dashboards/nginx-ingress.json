{
  "annotations": { "list": [] },
  "title": "Nginx Ingress Overview",
  "uid": "nginx-ingress-overview",
  "version": 1,
  "timezone": "browser",
  "schemaVersion": 39,
  "refresh": "5s",
  "time": { "from": "now-15m", "to": "now" },
  "panels": [
    {
      "id": 1,
      "title": "Request Rate (RPS)",
      "type": "stat",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "targets": [{
        "expr": "sum(rate(nginx_ingress_controller_nginx_process_requests_total[1m]))",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 500 },
              { "color": "red", "value": 1000 }
            ]
          }
        }
      },
      "options": { "colorMode": "value", "graphMode": "area" }
    },
    {
      "id": 2,
      "title": "Active Connections",
      "type": "stat",
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
      "targets": [{
        "expr": "sum(nginx_ingress_controller_nginx_process_connections{state=\"active\"})",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 100 },
              { "color": "red", "value": 500 }
            ]
          }
        }
      },
      "options": { "colorMode": "value", "graphMode": "area" }
    },
    {
      "id": 3,
      "title": "Waiting Connections (Queue)",
      "type": "stat",
      "gridPos": { "x": 12, "y": 0, "w": 6, "h": 4 },
      "targets": [{
        "expr": "sum(nginx_ingress_controller_nginx_process_connections{state=\"waiting\"})",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 50 },
              { "color": "red", "value": 200 }
            ]
          }
        }
      },
      "options": { "colorMode": "value", "graphMode": "area" }
    },
    {
      "id": 4,
      "title": "Nginx CPU",
      "type": "stat",
      "gridPos": { "x": 18, "y": 0, "w": 6, "h": 4 },
      "targets": [{
        "expr": "rate(nginx_ingress_controller_nginx_process_cpu_seconds_total[2m]) * 100",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 50 },
              { "color": "red", "value": 80 }
            ]
          }
        }
      },
      "options": { "colorMode": "value", "graphMode": "area" }
    },
    {
      "id": 5,
      "title": "Request Rate Over Time",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
      "targets": [{
        "expr": "sum(rate(nginx_ingress_controller_nginx_process_requests_total[1m]))",
        "legendFormat": "Total RPS",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 30,
            "showPoints": "never"
          }
        }
      }
    },
    {
      "id": 6,
      "title": "Connection States Over Time",
      "type": "timeseries",
      "gridPos": { "x": 12, "y": 4, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "nginx_ingress_controller_nginx_process_connections{state=\"active\"}",
          "legendFormat": "Active",
          "refId": "A"
        },
        {
          "expr": "nginx_ingress_controller_nginx_process_connections{state=\"reading\"}",
          "legendFormat": "Reading",
          "refId": "B"
        },
        {
          "expr": "nginx_ingress_controller_nginx_process_connections{state=\"writing\"}",
          "legendFormat": "Writing",
          "refId": "C"
        },
        {
          "expr": "nginx_ingress_controller_nginx_process_connections{state=\"waiting\"}",
          "legendFormat": "Waiting (Queue)",
          "refId": "D"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "custom": {
            "lineWidth": 1,
            "fillOpacity": 20,
            "showPoints": "never"
          }
        }
      },
      "options": { "legend": { "displayMode": "table", "placement": "right" } }
    },
    {
      "id": 7,
      "title": "Connection Throughput",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 12, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "rate(nginx_ingress_controller_nginx_process_connections_total{state=\"accepted\"}[1m])",
          "legendFormat": "Accepted/s",
          "refId": "A"
        },
        {
          "expr": "rate(nginx_ingress_controller_nginx_process_connections_total{state=\"handled\"}[1m])",
          "legendFormat": "Handled/s",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "cps",
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 20,
            "showPoints": "never"
          }
        }
      },
      "options": { "legend": { "displayMode": "list", "placement": "bottom" } }
    },
    {
      "id": 8,
      "title": "Dropped Connections (Accepted - Handled)",
      "description": "If this is > 0, connections are being dropped",
      "type": "timeseries",
      "gridPos": { "x": 12, "y": 12, "w": 12, "h": 6 },
      "targets": [{
        "expr": "rate(nginx_ingress_controller_nginx_process_connections_total{state=\"accepted\"}[1m]) - rate(nginx_ingress_controller_nginx_process_connections_total{state=\"handled\"}[1m])",
        "legendFormat": "Dropped/s",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "cps",
          "min": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 1 }
            ]
          },
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 30,
            "showPoints": "never"
          }
        }
      }
    },
    {
      "id": 9,
      "title": "Nginx Memory Usage",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 18, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "nginx_ingress_controller_nginx_process_resident_memory_bytes",
          "legendFormat": "Resident Memory",
          "refId": "A"
        },
        {
          "expr": "nginx_ingress_controller_nginx_process_virtual_memory_bytes",
          "legendFormat": "Virtual Memory",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "custom": {
            "lineWidth": 1,
            "fillOpacity": 20,
            "showPoints": "never"
          }
        }
      }
    },
    {
      "id": 10,
      "title": "Config Reload Status",
      "type": "stat",
      "gridPos": { "x": 12, "y": 18, "w": 6, "h": 6 },
      "targets": [{
        "expr": "nginx_ingress_controller_config_last_reload_successful",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "type": "value", "options": { "1": { "text": "Success", "color": "green" } } },
            { "type": "value", "options": { "0": { "text": "Failed", "color": "red" } } }
          ]
        }
      },
      "options": { "colorMode": "background", "graphMode": "none" }
    },
    {
      "id": 11,
      "title": "Bytes I/O Rate",
      "type": "timeseries",
      "gridPos": { "x": 18, "y": 18, "w": 6, "h": 6 },
      "targets": [
        {
          "expr": "rate(nginx_ingress_controller_nginx_process_read_bytes_total[1m])",
          "legendFormat": "Read",
          "refId": "A"
        },
        {
          "expr": "rate(nginx_ingress_controller_nginx_process_write_bytes_total[1m])",
          "legendFormat": "Write",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "custom": {
            "lineWidth": 1,
            "fillOpacity": 20,
            "showPoints": "never"
          }
        }
      }
    }
  ]
}
